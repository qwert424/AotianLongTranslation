/* 选择区 */
.change-container {
	position: absolute;
	background-color: #eee;
	width: 250rpx;
	height: 80rpx;
	text-align: center;
	line-height: 80rpx;
	top: 0;
	left: 0;
	letter-spacing: 10rpx;
}

/* 输入区 */
.top-container {
	box-sizing: border-box;
	height: 50%;
	width: 100%;
	padding: 30rpx;
	margin-top: 80rpx;
	border-top: 1rpx solid;
}

.top-container .input-area {
	width: 100%;
	height: 100%;
	letter-spacing: 8rpx;
	line-height: 50rpx;
}

/* 翻译区 */
.bottom-container {
	box-sizing: border-box;
	height: 50%;
	width: 100%;
	padding: 30rpx;
	background-color: rgba(204, 204, 204, 0.699);
	border-top: 1rpx dashed;
	position: relative;
}

.bottom-container .tip{
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%,-50%);
	font-size: 40rpx;
	color: rgb(158, 158, 158);
}